Time Complexity: O(3*N), we process each node thrice, once for every traversal.
Space Complexity: O(4*N), extra space used for storing postorder, inorder, preorder traversal and stack.

import java.util.*;

// Tree node definition
class TreeNode {
    int val;
    TreeNode left, right;

    TreeNode(int val) {
        this.val = val;
        left = right = null;
    }
}

// Pair class to store node and state
class Pair {
    TreeNode node;
    int state;

    Pair(TreeNode node, int state) {
        this.node = node;
        this.state = state;
    }
}

class Solution {
    public static void allTraversals(TreeNode root) {

        List<Integer> preorder = new ArrayList<>();
        List<Integer> inorder = new ArrayList<>();
        List<Integer> postorder = new ArrayList<>();

        if (root == null) return;

        Stack<Pair> st = new Stack<>();
        st.push(new Pair(root, 1));

        while (!st.isEmpty()) {
            Pair p = st.pop();

            // 1️⃣ Preorder
            if (p.state == 1) {
                preorder.add(p.node.val);
                p.state++;
                st.push(p);

                if (p.node.left != null) {
                    st.push(new Pair(p.node.left, 1));
                }
            }
            // 2️⃣ Inorder
            else if (p.state == 2) {
                inorder.add(p.node.val);
                p.state++;
                st.push(p);

                if (p.node.right != null) {
                    st.push(new Pair(p.node.right, 1));
                }
            }
            // 3️⃣ Postorder
            else {
                postorder.add(p.node.val);
            }
        }

        // Print results
        System.out.println("Preorder  : " + preorder);
        System.out.println("Inorder   : " + inorder);
        System.out.println("Postorder : " + postorder);
    }
}

// Driver class
public class Main {
    public static void main(String[] args) {

        /*
                1
               / \
              2   3
                 /
                5
        */

        TreeNode root = new TreeNode(1);
        root.left = new TreeNode(2);
        root.right = new TreeNode(3);
        root.right.left = new TreeNode(5);

        Solution.allTraversals(root);
    }
}
