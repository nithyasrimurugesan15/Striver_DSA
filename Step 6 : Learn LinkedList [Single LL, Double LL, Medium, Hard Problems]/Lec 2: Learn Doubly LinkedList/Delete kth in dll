class Node
{
    int data;
    Node next;
    Node prev;
    Node(int data1,Node next1,Node prev1)
    {
        this.data=data1;
        this.next=next1;
        this.prev=prev1;
    }
     Node(int data1)
    {
        this.data=data1;
        this.next=null;
        this.prev=null;
    }
}
class ll {
    static Node cnvrtdll(int[] arr) 
    {
        Node head=new Node(arr[0]);
        Node prev=head;
        for(int i=1;i<arr.length;i++)
        {
            Node temp=new Node(arr[i],null,prev);
            prev.next=temp;
            prev=temp;
        }
        return head;
    }
     static Node removekthdll(Node head,int k) 
    {
       if(head==null)
       {
           return null;
       }
       Node knode=head;
       int c=0;
       while(knode!=null)
       {
           c++;
           if(c==k)
           {
               break;
           }
           knode=knode.next;
       }
       Node prevnode=knode.prev;
       Node nextnode=knode.next;
       if(prevnode==null && nextnode==null)
       {
           return null;
       }
      else if(prevnode==null)
      {
          Node temp=head;
          head=head.next;
          head.prev=null;
          temp.next=null;
        return head;
      }
       else if(nextnode==null)
       {
             Node temp=head;
             while(temp.next!=null)
            {
              temp=temp.next;
            }
           Node newNode=temp.prev;
           newNode.next=null;
           temp.prev=null;
         return head;
       }
       prevnode.next=nextnode;
       nextnode.prev=prevnode;
       knode.prev=null;
       knode.next=null;
       return head;
    }
    static void display(Node head) {
        Node temp=head;
        while(temp!=null)
        {
            System.out.print(temp.data+" -> ");
            temp=temp.next;
        }
         System.out.println("null");
    }
}
public class Main {
    public static void main(String[] args)
    {
        int[] arr={2,3,4,5,6,7};
        Node head=ll.cnvrtdll(arr);
        System.out.println("Before deleting kth in 2d linked list ");
       ll.display(head);
       head=ll.removekthdll(head,3);
       System.out.println("After deleting kth in 2d linked list ");
       ll.display(head);
     
    }
}
