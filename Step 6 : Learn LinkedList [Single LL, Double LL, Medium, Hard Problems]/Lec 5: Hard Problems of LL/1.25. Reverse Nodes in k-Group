https://leetcode.com/problems/reverse-nodes-in-k-group/description/

o(n) and o(1)

class Solution {
    public ListNode reverseKGroup(ListNode head, int k) {
        ListNode temp=head;
        ListNode  prev=null;
        while(temp!=null) {
        ListNode  kth=findkth(temp,k);
        if(kth==null)
        {
            if(prev!=null)
            {
                prev.next=temp;
              
            }
              break;
            
        }
        ListNode newnode=kth.next;
        kth.next=null;
        reverse(temp);
        if(temp==head)
        {
            head=kth;
        }
        else
        {
            prev.next=kth;
        }
        prev=temp;
        temp=newnode;
    }
    return head;
    }
    public ListNode findkth(ListNode temp,int k)
    {
        k-=1;
        while(temp!=null && k>0)
        {
            k--;
            temp=temp.next;
        }
        return temp;
    }
    public ListNode reverse(ListNode temp)
    {
        ListNode prev=null;
        while(temp!=null)
        {
            ListNode  nn=temp.next;            
            temp.next=prev;
            prev=temp;
            temp=nn;

        }
        return prev;
    }
}
