Time:  O(n) for each call to atMostKDistinct.
Space:  O(1) map size bounded by 26 characters for alphabets.

import java.util.*;
class Solution {
    public static int atMostKDistinct(String s, int k) {
        if (k < 0) return 0;
        int left = 0, res = 0;
        Map<Character, Integer> freq = new HashMap<>();
        for (int right = 0; right < s.length(); right++) {
            char r = s.charAt(right);
            freq.put(r, freq.getOrDefault(r, 0) + 1);
            while (freq.size() > k) {
                char l = s.charAt(left);
                freq.put(l, freq.get(l) - 1);
                if (freq.get(l) == 0) freq.remove(l);
                left++;
            }
            res += right - left + 1;
        }
        return res;
    }

    public static int countSubstrings(String s, int k) {
        return atMostKDistinct(s, k) - atMostKDistinct(s, k - 1);
    }
}

public class Main {
    public static void main(String[] args) {
        String s = "pqpqs";
        int k = 2;
        System.out.println(Solution.countSubstrings(s, k)); // prints 7
    }
}
