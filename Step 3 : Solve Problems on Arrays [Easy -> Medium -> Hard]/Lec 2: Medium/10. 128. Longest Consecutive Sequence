class Solution {
    public int longestConsecutive(int[] nums) {
        Set<Integer> s = new HashSet<>();
        int max=0;
        for(int i=0;i<nums.length;i++) {
            s.add(nums[i]);
        }
        for(int num : s) {
            
            if(!s.contains(num-1)) {
                int c=num;
                int l=0;
            while(s.contains(c)) {
                l+=1;
                c+=1;
            }
            if(l>max) {
                max = l;
            }
            }
        }
        return max;
        
    }
}
